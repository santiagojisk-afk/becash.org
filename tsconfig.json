{
"compilerOptions": {
"target": "ES2020",
"lib": ["dom", "es2020"],
"module": "esnext",
"moduleResolution": "bundler",
"jsx": "preserve",
"strict": true,
"noEmit": true,
"skipLibCheck": true,
"resolveJsonModule": true,
"isolatedModules": true,

// ðŸ‘‡ base de resoluciÃ³n en la raÃ­z del proyecto
"baseUrl": ".",

// ðŸ‘‡ alias @ apunta a src/ y app/
"paths": {
"@/*": ["src/*", "app/*"]
},

"allowJs": true,
"incremental": true,
"esModuleInterop": true,
"plugins": [{ "name": "next" }]
},
"include": [
"next-env.d.ts",
"app/**/*.ts",
"app/**/*.tsx",
"src/**/*.ts",
"src/**/*.tsx",
".next/types/**/*.ts"
],
"exclude": ["node_modules"]
}